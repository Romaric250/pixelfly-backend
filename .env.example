# PixelFly Backend Environment Variables

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# AI/ML API Keys
GOOGLE_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Optional

# Database (if needed for backend)
DATABASE_URL=mongodb://localhost:27017/pixelfly_backend

# Storage Configuration
STORAGE_PROVIDER=uploadthing  # or firebase
UPLOADTHING_SECRET=your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# Firebase Configuration (when switching from UploadThing)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Processing Configuration
MAX_IMAGE_SIZE=8388608  # 8MB in bytes
MAX_BATCH_SIZE=50
PROCESSING_TIMEOUT=300  # 5 minutes

# Logging
LOG_LEVEL=INFO
LOG_FILE=pixelfly_backend.log

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
